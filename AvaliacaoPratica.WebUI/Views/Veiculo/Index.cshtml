@model IEnumerable<AvaliacaoPratica.Application.DTOs.VeiculoDTO>

@{
    ViewData["Title"] = "Veiculos";
}
<style>
    .modal-lg {
        max-width: 80%;
    }
</style>
<div>
    <h2>@ViewData["Title"]</h2>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="Create" class="btn btn-primary">
                    <span title="Novo" class="fas fa-plus"></span>Novo
                </a>
            </div>
        </div>
    </div>
</div>
<br />
<div class="panel panel-default">
    <table class="table table-striped" width="90%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Renavam)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Modelo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AnoFabricacao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AnoModelo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quilometragem)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Valor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StatusId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MarcaId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProprietarioId)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Renavam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Modelo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnoFabricacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnoModelo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quilometragem)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Valor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Marca.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Proprietario.Nome)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" title="Edit" class="btn btn-warning">
                            <span class="fas fa-edit">Editar</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>